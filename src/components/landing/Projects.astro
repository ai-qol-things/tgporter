---
// Define the array of projects directly in the frontmatter script.
const otherprojects = [
    {
        url: "http://www.sccapitalpartnersinc.com/services/mergers-and-acquisitions/",
        title: "Merger and Acquisition",
        description:
            "Succession and exit strategy facilitation / consulting. Sales, Mergers and Acquisition representation with expertise to identify options and complete the transaction.",
    },
    {
        url: "https://www.sccapitalpartnersinc.com/services/private-placements/",
        title: "Debt",
        description:
            "Analyze the client’s financial needs. Determine the amount and type of debt financing. Locate the best and most reasonable funding source. Negotiate the terms and conditions for the client. Complete the funding.",
    },
    {
        url: "http://www.sccapitalpartnersinc.com/services/advisory-services/",
        title: "Equity",
        description:
            "Public or Private, Hedge Funds, Accredited Investors, Family Offices, Mergers and Acquisitions.",
    },
    {
        url: "http://www.sccapitalpartnersinc.com/services/investment-banking/",
        title: "Public Offerings",
        description:
            "SC Capital Partners has a long history taking clients to the Toronto Stock Exchange (TSX) for public offerings. Lower Costs, strong Broker support and Liquidity of Shares.",
    },
    // Add more projects as needed...
];

// Function to calculate `data-aos-duration` based on index
function calculateAosDuration(index) {
    return 1500 + index * 500; // Example: Increment duration by 500ms for each project
}
---

<section class="bg-primary">
    <div class="px-8 2xl:max-w-7xl mx-auto py-32">
        <div class="space-y-2">
            <!-- Section Title and Decorative Elements -->
            <div
                class="h-0.5 bg-secondary"
                data-aos="fade-up"
                data-aos-duration="1000"
            >
            </div>
            <h3
                class="text-secondary text-base font-medium"
                data-aos="fade-up"
                data-aos-duration="1500"
            >
                <span>Main</span>
                <span class="font-bold">services</span>
            </h3>
        </div>

        <ul
            class="mx-auto grid grid-cols-1 sm:grid-cols-2 text-secondary md:grid-cols-3 lg:grid-cols-4 items-start gap-6 mt-32"
            role="list"
        >
            {
                otherprojects.map((project, index) => (
                    <li
                        class="flow-root h-full"
                        data-aos="fade-up"
                        data-aos-duration={calculateAosDuration(index)}
                    >
                        <a href={project.url}>
                            <div class="h-full flex flex-col justify-between">
                                <div>
                                    <p class="group-hover:text-secondary/70 text-secondary text-9xl font-black lg:rotate-90 xl:-translate-x-28 lg:-translate-x-16 lg:mb-8 xl:mb-0">
                                        0{index + 1}.
                                    </p>
                                    <p class="italic shrink-0">
                                        {project.title}
                                    </p>
                                    <p class="text-base mt-3 leading-relaxed">
                                        {project.description}
                                    </p>
                                </div>
                                <div>
                                    <p class="mt-3 text-base font-semibold">
                                        Learn more &nbsp; ↗
                                    </p>
                                </div>
                            </div>
                        </a>
                    </li>
                ))
            }
        </ul>
    </div>
</section>
